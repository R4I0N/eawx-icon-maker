<UserControl x:Class="IconMakinator.Views.SharedPresetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconMakinator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Margin="5,25,5,10" Width="500" Rows="4" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Shared/SpymasterHero.png" Width="25" Height="25"/>
            <CheckBox Content="Spy Master" IsChecked="{Binding SpyMasterRing}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Shared/AdminHero.png" Width="25" Height="25"/>
            <CheckBox Content="Administrator" IsChecked="{Binding AdminRing}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <!--<CheckBox Content="Agent" IsChecked="{Binding AgentRing}" Foreground="{DynamicResource TextForeground}" Margin="5"/>-->
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Shared/SSD.png" Width="25" Height="25"/>
            <CheckBox Content="SSD" IsChecked="{Binding JustSSD}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Shared/assign_-_pilot.png" Width="25" Height="25"/>
            <CheckBox Content="Fighter Hero" IsChecked="{Binding FighterHero}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
    </UniformGrid>
</UserControl>
