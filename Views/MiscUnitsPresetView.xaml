<UserControl x:Class="IconMakinator.Views.MiscUnitsPresetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconMakinator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Margin="5,50,5,50" Width="500" Rows="4" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckBox Content="Rocket" IsChecked="{Binding Rocket}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Armored" IsChecked="{Binding Armored}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Shielded" IsChecked="{Binding Shielded}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Armored Shielded" IsChecked="{Binding ArmoredShielded}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Battleship" IsChecked="{Binding Battleship}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Carrier" IsChecked="{Binding Carrier}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Fighter Tender" IsChecked="{Binding FighterTender}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Fleet Tender" IsChecked="{Binding FleetTender}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Interdictor" IsChecked="{Binding Interdictor}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="PDF" IsChecked="{Binding Pdf}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Sensor" IsChecked="{Binding Sensor}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Star Forge Refit" IsChecked="{Binding StarForge}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Refit" IsChecked="{Binding Refit}" Foreground="{DynamicResource TextForeground}" Margin="5" />
    </UniformGrid>
</UserControl>
