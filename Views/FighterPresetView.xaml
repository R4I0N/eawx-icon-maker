<UserControl x:Class="IconMakinator.Views.FighterPresetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconMakinator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Margin="5,25,5,10" Width="500" Rows="4" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/units_-_bomber.png" Width="25" Height="25"/>
            <CheckBox Content="Is Bomber" IsChecked="{Binding BomberSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/squadrons_-_0.3x.png" Width="25" Height="25"/>
            <CheckBox Content="1/3 Squadron" IsChecked="{Binding OneThirdSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/squadrons_-_0.5x.png" Width="25" Height="25"/>
            <CheckBox Content="1/2 Squadron" IsChecked="{Binding OneHalfSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/squadrons_-_1x.png" Width="25" Height="25"/>
            <CheckBox Content="1/1 Squadron" IsChecked="{Binding SingleSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/squadrons_-_2x.png" Width="25" Height="25"/>
            <CheckBox Content="2/1 Squadron" IsChecked="{Binding DoubleSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,,/UI/Fighters/squadrons_-_3x.png" Width="25" Height="25"/>
            <CheckBox Content="3/1 Squadron" IsChecked="{Binding TripleSquadron}" Foreground="{DynamicResource TextForeground}" Margin="5"/>
        </StackPanel>
    </UniformGrid>
</UserControl>
