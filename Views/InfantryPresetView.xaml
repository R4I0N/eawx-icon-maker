<UserControl x:Class="IconMakinator.Views.InfantryPresetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconMakinator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Margin="5,25,5,10" Width="500" Rows="4" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_assault.png" Width="25" Height="25"/>
            <CheckBox Content="Assault" IsChecked="{Binding InfantryAssault}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_heavy.png" Width="25" Height="25"/>
            <CheckBox Content="Heavy" IsChecked="{Binding InfantryHeavy}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_sniper.png" Width="25" Height="25"/>
            <CheckBox Content="Sniper" IsChecked="{Binding InfantrySniper}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_support.png" Width="25" Height="25"/>
            <CheckBox Content="Support" IsChecked="{Binding InfantrySupport}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_elite_guard.png" Width="25" Height="25"/>
            <CheckBox Content="Elite" IsChecked="{Binding InfantryElite}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Infantry/infantry_-_commander.png" Width="25" Height="25"/>
            <CheckBox Content="Commander" IsChecked="{Binding InfantryCommander}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        </StackPanel>
    </UniformGrid>
</UserControl>
