<UserControl x:Class="IconMakinator.Views.NewRepublicPresetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconMakinator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Margin="5,50,5,50" Width="500" Rows="4" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckBox Content="Hire Admiral" IsChecked="{Binding HireAdmiral}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Retire Admiral" IsChecked="{Binding RetireAdmiral}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Hire General" IsChecked="{Binding HireGeneral}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Retire General" IsChecked="{Binding RetireGeneral}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Hire Jedi" IsChecked="{Binding HireJedi}" Foreground="{DynamicResource TextForeground}" Margin="5" />
        <CheckBox Content="Retire Jedi" IsChecked="{Binding RetireJedi}" Foreground="{DynamicResource TextForeground}" Margin="5" />
    </UniformGrid>
</UserControl>
